<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-6 bg-yellow-50">
      <h1 class="text-3xl font-bold text-yellow-600 mb-4">Welcome to Tuber HUB</h1>
      <p class="text-gray-700 mb-6">Your central location for tuber management!</p>
      
      <% if authenticated? %>
        <div class="flex flex-col gap-4">
          <p class="text-green-700">Welcome back, <%= Current.user.email_address %>!</p>
          <div>
            <%= button_to "Log out", session_path, method: :delete, class: "text-red-500 hover:text-red-700" %>
          </div>
        </div>
      <% else %>
        <div class="flex flex-col gap-4">
          <p class="mb-4 text-gray-600">Please sign in to continue:</p>
          <div class="flex gap-4">
            <%= link_to "Sign in", new_session_path, class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
