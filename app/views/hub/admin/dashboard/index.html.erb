<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700">
  <div class="w-full mb-1">
    <div class="mb-4">
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">Admin Dashboard</h1>
    </div>
  </div>
</div>

<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="inline-block min-w-full align-middle">
      <div class="p-4 bg-white dark:bg-gray-800">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 mb-4">
          <!-- Users Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Users</h3>
              <%= link_to hub_admin_users_path, class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center">
                    <%= icon "users", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Manage Users</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Add, edit, or remove user accounts</p>
                    <div class="mt-4">
                      <%= link_to "Add User", new_hub_admin_user_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Farms Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Farms</h3>
              <%= link_to hub_admin_farms_path, class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center">
                    <%= icon "building-office", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Manage Farms</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Add, edit, or remove farms</p>
                    <div class="mt-4">
                      <%= link_to "Add Farm", new_hub_admin_farm_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Settings Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">System Settings</h3>
              <%= link_to "#", class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center">
                    <%= icon "cog", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Configure System</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage global settings and configurations</p>
                    <div class="mt-4">
                      <%= link_to "Settings", "#", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Recent Activity -->
        <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Activity</h3>
          </div>
          <div class="flex flex-col mt-2">
            <div class="overflow-x-auto rounded-lg">
              <div class="inline-block min-w-full align-middle">
                <div class="overflow-hidden shadow-md">
                  <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
                    <thead class="bg-gray-50 dark:bg-gray-700">
                      <tr>
                        <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                          Action
                        </th>
                        <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                          User
                        </th>
                        <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                          Date
                        </th>
                      </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800">
                      <% if @recent_users.present? %>
                        <% @recent_users.each do |user| %>
                          <tr class="border-b dark:border-gray-700">
                            <td class="p-4 text-sm font-normal text-gray-900 whitespace-nowrap dark:text-white">
                              User created
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= user.email_address %>
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= user.created_at.strftime("%B %d, %Y") %>
                            </td>
                          </tr>
                        <% end %>
                      <% end %>
                      
                      <% if @recent_farms.present? %>
                        <% @recent_farms.each do |farm| %>
                          <tr class="border-b dark:border-gray-700">
                            <td class="p-4 text-sm font-normal text-gray-900 whitespace-nowrap dark:text-white">
                              Farm created
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= farm.name %>
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= farm.created_at.strftime("%B %d, %Y") %>
                            </td>
                          </tr>
                        <% end %>
                      <% end %>
                      
                      <% if @recent_users.blank? && @recent_farms.blank? %>
                        <tr class="border-b dark:border-gray-700">
                          <td colspan="3" class="p-4 text-sm font-normal text-gray-500 text-center dark:text-gray-400">
                            No recent activity found
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
