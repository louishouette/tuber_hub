<div class="p-4">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Permission Details</h1>
    <div class="space-x-2">
      <%= link_to 'Edit', edit_hub_admin_permission_path(@permission), class: 'text-sm font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
      <%= link_to 'Back to Permissions', hub_admin_permissions_path, class: 'text-sm font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
    </div>
  </div>

  <% if notice.present? %>
    <div id="notice" class="flex p-4 mb-4 text-sm text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert">
      <svg class="flex-shrink-0 inline w-5 h-5 mr-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
      </svg>
      <span class="sr-only">Info</span>
      <div>
        <%= notice %>
      </div>
    </div>
  <% end %>

  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow dark:bg-gray-800 p-6">
    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="col-span-1">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Namespace</dt>
        <dd class="mt-1 text-base text-gray-900 dark:text-white"><%= @permission.namespace %></dd>
      </div>

      <div class="col-span-1">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Controller</dt>
        <dd class="mt-1 text-base text-gray-900 dark:text-white"><%= @permission.controller %></dd>
      </div>

      <div class="col-span-1">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Action</dt>
        <dd class="mt-1 text-base text-gray-900 dark:text-white"><%= @permission.action %></dd>
      </div>

      <div class="col-span-2">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Description</dt>
        <dd class="mt-1 text-base text-gray-900 dark:text-white"><%= @permission.description %></dd>
      </div>

      <div class="col-span-1">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Created At</dt>
        <dd class="mt-1 text-base text-gray-900 dark:text-white"><%= @permission.created_at.strftime("%B %d, %Y %H:%M") %></dd>
      </div>

      <div class="col-span-1">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Updated At</dt>
        <dd class="mt-1 text-base text-gray-900 dark:text-white"><%= @permission.updated_at.strftime("%B %d, %Y %H:%M") %></dd>
      </div>
    </dl>

    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Assigned to Roles</h3>
      <% if @permission.roles.any? %>
        <ul class="list-disc pl-5 space-y-2 text-gray-900 dark:text-white">
          <% @permission.roles.each do |role| %>
            <li>
              <%= link_to role.name, hub_admin_role_path(role), class: 'text-blue-600 dark:text-blue-500 hover:underline' %>
              <span class="text-sm text-gray-500 dark:text-gray-400">- <%= role.description %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 dark:text-gray-400">This permission is not assigned to any roles yet.</p>
      <% end %>
    </div>
  </div>
</div>
