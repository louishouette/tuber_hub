<div class="py-4 px-6 flex items-center justify-between mb-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white">User Preferences</h1>
  <div class="flex items-center gap-2">
    <%= link_to new_hub_admin_user_preference_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-gray-200 rounded-lg hover:bg-blue-50 focus:ring-4 focus:ring-blue-100 dark:bg-gray-800 dark:text-blue-500 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700" do %>
      <%= icon "plus", class: "w-4 h-4 mr-2" %>
      Add Preference
    <% end %>
  </div>
</div>

<div class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg">
  <% if @user_preferences.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @user_preferences.each do |preference| %>
        <div class="h-full">
          <%= render 'preference_card', preference: preference %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6">
      <%= paginate @user_preferences %>
    </div>
  <% else %>
    <div class="p-8 text-center bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
      <div class="flex justify-center mb-4">
        <%= icon "adjustments-horizontal", class: "w-12 h-12 text-gray-400" %>
      </div>
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No preferences found</h2>
      <p class="text-gray-500 dark:text-gray-400 mb-4">You haven't created any preferences yet. Preferences help personalize your experience.</p>
      <div class="mt-4">
        <%= link_to new_hub_admin_user_preference_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
          <%= icon "plus", class: "w-4 h-4 mr-2" %>
          Create your first preference
        <% end %>
      </div>
    </div>
  <% end %>
</div>
