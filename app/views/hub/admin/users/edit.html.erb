<div class="p-4">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit User</h1>
    <div class="space-x-2">
      <%= link_to 'Show', hub_admin_user_path(@user), class: 'text-sm font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
      <%= link_to 'Assign Roles', assign_roles_hub_admin_user_path(@user), class: 'text-sm font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
      <%= link_to 'Back to Users', hub_admin_users_path, class: 'text-sm font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
    </div>
  </div>

  <div class="max-w-3xl mx-auto bg-white rounded-lg shadow dark:bg-gray-800 p-6">
    <%= render 'hub/admin/shared/user_form', user: @user %>
  </div>
</div>
