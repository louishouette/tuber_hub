<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700">
  <div class="w-full mb-1">
    <div class="mb-4">
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">Cultivation Dashboard</h1>
      <% if @farm.present? %>
        <p class="text-sm text-gray-500 dark:text-gray-400">Farm: <%= @farm.name %></p>
      <% end %>
    </div>
  </div>
</div>

<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="inline-block min-w-full align-middle">
      <div class="p-4 bg-white dark:bg-gray-800">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 mb-4">
          <!-- Operations Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Operations</h3>
              <%= link_to "#", class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center py-4">
                    <%= icon "clipboard-document-list", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Manage Operations</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Plan and track cultivation operations</p>
                    <div class="mt-4">
                      <%= link_to "New Operation", "#", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Treatments Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Treatments</h3>
              <%= link_to "#", class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center py-4">
                    <%= icon "beaker", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Manage Treatments</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Configure and track treatments</p>
                    <div class="mt-4">
                      <%= link_to "New Treatment", "#", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Planting Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Planting</h3>
              <%= link_to "#", class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center py-4">
                    <%= icon "map", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Manage Plantings</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Configure orchards, parcels, and rows</p>
                    <div class="mt-4">
                      <%= link_to "View Plantings", "#", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Recent Operations -->
        <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Operations</h3>
            <%= link_to hub_cultivation_operations_path, class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
              View all
            <% end %>
          </div>
          <div class="flex flex-col mt-2">
            <div class="overflow-x-auto rounded-lg">
              <div class="inline-block min-w-full align-middle">
                <% if @recent_operations.present? %>
                  <div class="overflow-hidden shadow-md">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
                      <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Operation
                          </th>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Type
                          </th>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Status
                          </th>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Date
                          </th>
                        </tr>
                      </thead>
                      <tbody class="bg-white dark:bg-gray-800">
                        <% @recent_operations.each do |operation| %>
                          <tr class="border-b dark:border-gray-700">
                            <td class="p-4 text-sm font-normal text-gray-900 whitespace-nowrap dark:text-white">
                              <%= link_to operation.name, "#", class: "text-blue-600 hover:underline dark:text-blue-500" %>
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= operation.operation_type %>
                            </td>
                            <td class="p-4 text-sm font-normal whitespace-nowrap">
                              <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-md dark:bg-green-900 dark:text-green-300">
                                <%= operation.status %>
                              </span>
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= operation.operation_date.strftime("%B %d, %Y") %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% else %>
                  <div class="text-center py-4">
                    <p class="text-gray-500 dark:text-gray-400">No recent operations found</p>
                    <%= link_to "Create Operation", "#", class: "mt-2 inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
