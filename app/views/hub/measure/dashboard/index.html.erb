<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700">
  <div class="w-full mb-1">
    <div class="mb-4">
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">Measure Dashboard</h1>
      <% if @farm.present? %>
        <p class="text-sm text-gray-500 dark:text-gray-400">Farm: <%= @farm.name %></p>
      <% end %>
    </div>
  </div>
</div>

<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="inline-block min-w-full align-middle">
      <div class="p-4 bg-white dark:bg-gray-800">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 mb-4">
          <!-- Observations Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Observations</h3>
              <%= link_to "#", class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center py-4">
                    <%= icon "eye", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Track Observations</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Record and view field observations</p>
                    <div class="mt-4">
                      <%= link_to "New Observation", "#", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Soil Analysis Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Soil Analysis</h3>
              <%= link_to "#", class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center py-4">
                    <%= icon "rectangle-stack", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Soil Analysis</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Track soil health and composition</p>
                    <div class="mt-4">
                      <%= link_to "New Analysis", "#", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Weather Data Card -->
          <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Weather Data</h3>
              <%= link_to "#", class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
                View all
              <% end %>
            </div>
            <div class="flex flex-col mt-2">
              <div class="overflow-x-auto rounded-lg">
                <div class="inline-block min-w-full align-middle">
                  <div class="text-center py-4">
                    <%= icon "cloud", class: "mx-auto h-12 w-12 text-gray-400" %>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Weather Data</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">View meteorological data and forecasts</p>
                    <div class="mt-4">
                      <%= link_to "View Weather", "#", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Recent Observations -->
        <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Observations</h3>
            <%= link_to hub_measure_observations_path, class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" do %>
              View all
            <% end %>
          </div>
          <div class="flex flex-col mt-2">
            <div class="overflow-x-auto rounded-lg">
              <div class="inline-block min-w-full align-middle">
                <% if @recent_observations.present? %>
                  <div class="overflow-hidden shadow-md">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
                      <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Title
                          </th>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Type
                          </th>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Location
                          </th>
                          <th scope="col" class="p-4 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-white">
                            Date
                          </th>
                        </tr>
                      </thead>
                      <tbody class="bg-white dark:bg-gray-800">
                        <% @recent_observations.each do |observation| %>
                          <tr class="border-b dark:border-gray-700">
                            <td class="p-4 text-sm font-normal text-gray-900 whitespace-nowrap dark:text-white">
                              <%= link_to observation.title, "#", class: "text-blue-600 hover:underline dark:text-blue-500" %>
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= observation.observation_type %>
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= observation.location %>
                            </td>
                            <td class="p-4 text-sm font-normal text-gray-500 whitespace-nowrap dark:text-gray-400">
                              <%= observation.observed_at.strftime("%B %d, %Y") %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% else %>
                  <div class="text-center py-4">
                    <p class="text-gray-500 dark:text-gray-400">No recent observations found</p>
                    <%= link_to "Create Observation", "#", class: "mt-2 inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Charts -->
        <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800 mt-4">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Data Visualization</h3>
          </div>
          <div class="grid grid-cols-1 gap-4 lg:grid-cols-2">
            <div>
              <h4 class="text-md font-medium text-gray-900 dark:text-white mb-3">Observations by Type</h4>
              <%= pie_chart({"Sample Data" => 30, "More Data" => 20, "Other Data" => 15}, 
                  colors: ["#3b82f6", "#10b981", "#f59e0b"], 
                  donut: true, 
                  legend: "bottom", 
                  dataset: {borderWidth: 0}) %>
            </div>
            <div>
              <h4 class="text-md font-medium text-gray-900 dark:text-white mb-3">Observations Over Time</h4>
              <%= line_chart({"Sample Data" => [[Time.zone.now - 6.days, 5], [Time.zone.now - 5.days, 8], [Time.zone.now - 4.days, 12], 
                                            [Time.zone.now - 3.days, 7], [Time.zone.now - 2.days, 15], [Time.zone.now - 1.day, 10], 
                                            [Time.zone.now, 18]]}, 
                  colors: ["#3b82f6"], 
                  curve: true, 
                  points: false) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
