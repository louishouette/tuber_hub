<div class="toast-notification max-w-xs p-4 mb-4 rounded-lg shadow-md animate-slide-in flex items-start <%= notification_css_class(notification.notification_type) %>" 
     data-notification-id="<%= notification.id %>">
  <div class="flex-shrink-0 mr-3">
    <%= notification_icon(notification.notification_type) %>
  </div>
  <div class="flex-grow pr-8">
    <p class="text-sm font-medium"><%= notification.message %></p>
  </div>
  <button type="button" 
          class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 inline-flex h-8 w-8 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700" 
          data-action="click->toasts#dismiss">
    <%= icon "x", library: "lucide", variant: "outline", class: "w-5 h-5" %>
  </button>
</div>
