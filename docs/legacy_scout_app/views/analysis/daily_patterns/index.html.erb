<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Daily Patterns Analysis</h1>

  <div class="space-y-8">
    <!-- Findings per Hour -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Number of Findings per Hour</h2>
      <%= column_chart @findings_by_hour,
          height: "400px",
          colors: ["#3B82F6"],
          library: {
            scales: {
              x: {
                grid: {
                  display: false
                }
              },
              y: {
                beginAtZero: true,
                grid: {
                  color: 'rgba(0, 0, 0, 0.1)'
                }
              }
            },
            plugins: {
              title: { 
                display: true, 
                text: "Distribution of findings throughout the day" 
              }
            }
          } %>
    </div>
  </div>
</div>
