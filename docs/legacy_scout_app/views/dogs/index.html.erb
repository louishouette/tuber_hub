<div class="container mx-auto px-4">
  <% content_for :title, "Dogs" %>

  <div class="flex flex-col sm:flex-row justify-between items-center mb-6 gap-4">
    <div>
      <h1 class="font-bold text-3xl">Dogs</h1>
      <p class="text-gray-600 mt-1">Manage and view statistics for your truffle hunting dogs</p>
    </div>
    <%= link_to new_dog_path, class: "w-full sm:w-auto rounded-lg py-3 px-5 bg-blue-600 text-white text-center font-medium hover:bg-blue-700 focus:ring-4 focus:ring-blue-300" do %>
      <i class="fas fa-plus mr-2"></i> New dog
    <% end %>
  </div>

  <div id="dogs" class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
    <% @dogs.each do |dog| %>
      <%= render dog %>
    <% end %>
  </div>
</div>
