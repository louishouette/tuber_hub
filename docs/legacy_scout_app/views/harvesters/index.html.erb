<div class="w-full">

  <% content_for :title, "Harvesters" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Harvesters</h1>
    <%= link_to "New harvester", new_harvester_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="harvesters" class="min-w-full">
    <% @harvesters.each do |harvester| %>
      <%= render harvester %>
      <p>
        <%= link_to "Show this harvester", harvester, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
