<div class="p-4 sm:ml-64">
  <% if notice.present? %>
    <div id="notice" class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">
      <%= t('.title', default: 'Edit Intake') %>
      <span class="text-gray-500 font-normal">#<%= @intake.id %></span>
    </h1>
  </div>

  <%= render "form", intake: @intake %>

  <%= link_to "Show this intake", @intake, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to intakes", intakes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
