<% flash.each do |type, message| %>
  <% flash_class = case type
                   when 'notice' then 'text-green-800 bg-green-50 dark:bg-gray-800 dark:text-green-400'
                   when 'alert'  then 'text-red-800 bg-red-50 dark:bg-gray-800 dark:text-red-400'
                   when 'info'   then 'text-blue-800 bg-blue-50 dark:bg-gray-800 dark:text-blue-400'
                   else 'text-gray-800 bg-gray-50 dark:bg-gray-800 dark:text-gray-400'
                   end %>
  
  <div data-controller="flash"
       data-notifications-auto-hide-value="true"
       data-notifications-auto-hide-delay-value="5000"
       class="flex items-center w-full p-4 border-b border-gray-200 dark:border-gray-600 transition-opacity duration-300
              <%= flash_class %>"
       role="alert"
       data-notification-auto-hide>
    <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 <%= type == 'alert' ? 'text-red-500 bg-red-100' : 'text-green-500 bg-green-100' %> rounded-lg">
      <% if type == 'alert' %>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z"/>
        </svg>
      <% else %>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
        </svg>
      <% end %>
    </div>
    <div class="ms-3 text-sm font-normal"><%= message %></div>
  </div>
<% end %>
