<div data-controller="notifications">
  <button type="button" 
          id="notificationsDropdownButton"
          data-dropdown-toggle="notificationsDropdown"
          data-dropdown-placement="bottom-end"
          data-notifications-target="dropdown"
          class="relative p-2 text-gray-500 rounded-lg hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600">
    <span class="sr-only"><%= t('notifications.view') %></span>
    <!-- Bell Icon -->
    <svg aria-hidden="true" class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"></path>
    </svg>
    <!-- Notification Counter -->
    <div data-notifications-target="count"
         class="absolute inline-flex items-center justify-center w-5 h-5 text-xs font-bold text-white bg-red-500 rounded-full -top-1 -right-1 hidden">
      0
    </div>
  </button>

  <!-- Dropdown menu -->
  <div id="notificationsDropdown"
       class="hidden overflow-hidden z-50 max-w-sm text-base list-none bg-white rounded divide-y divide-gray-100 shadow-lg dark:divide-gray-600 dark:bg-gray-700 rounded-xl"
       data-notifications-target="list">
    <div class="block py-2 px-4 text-base font-medium text-center text-gray-700 bg-gray-50 dark:bg-gray-600 dark:text-gray-300">
      <%= t('notifications.title') %>
    </div>
    <!-- Flash Messages -->
    <div class="divide-y divide-gray-100 dark:divide-gray-700">
      <%= render partial: 'layouts/shared/notification_flash' %>
    </div>
    <!-- Notifications -->
    <div class="divide-y divide-gray-100 dark:divide-gray-700" data-notifications-target="list">
      <div class="py-3 px-4 text-sm text-center text-gray-500 dark:text-gray-400">
        <%= t('notifications.empty') %>
      </div>
    </div>
  </div>
</div>
