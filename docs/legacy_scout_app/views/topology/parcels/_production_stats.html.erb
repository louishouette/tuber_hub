<!-- Production Stats Card -->
<div class="bg-white border border-gray-200 rounded-lg p-3 mb-4">
  <div class="text-sm font-medium text-gray-900 mb-2">Production Statistics</div>
  
  <div class="grid grid-cols-2 gap-y-2 text-sm">
    <div class="text-gray-700">Total Production:</div>
    <div class="text-right font-medium text-gray-900"><%= production_stats[:total] %></div>
    
    <div class="text-gray-700">Per Planting:</div>
    <div class="text-right font-medium text-gray-900"><%= production_stats[:per_planting] %></div>
    
    <div class="text-gray-700">Per Location:</div>
    <div class="text-right font-medium text-gray-900"><%= production_stats[:per_location] %></div>
    
    <div class="text-gray-700">Per Producing Planting:</div>
    <div class="text-right font-medium text-gray-900"><%= production_stats[:per_producing_planting] %></div>
  </div>
</div>
