<div id="<%= dom_id user %>" class="space-y-3">
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <span class="inline-block h-12 w-12 overflow-hidden rounded-full bg-gray-100">
        <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </span>
    </div>
    <div class="ml-4">
      <h3 class="text-lg font-medium text-gray-900">
        <%= user.name %>
      </h3>
      <p class="text-sm text-gray-500">
        <%= user.email_address %>
      </p>
    </div>
  </div>

  <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Role</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= user.role.titleize %></dd>
    </div>

    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1">
        <span class="<%= user.is_active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> text-xs font-medium mr-2 px-2.5 py-0.5 rounded">
          <%= user.is_active? ? 'Active' : 'Inactive' %>
        </span>
      </dd>
    </div>
  </div>

  <div class="mt-4 grid grid-cols-2 gap-4">
    <div class="col-span-1">
      <dt class="text-sm font-medium text-gray-500">Can Survey</dt>
      <dd class="mt-1">
        <% if user.can_survey? %>
          <i class="fas fa-check text-green-500"></i>
        <% else %>
          <i class="fas fa-times text-red-500"></i>
        <% end %>
      </dd>
    </div>
    <div class="col-span-1">
      <dt class="text-sm font-medium text-gray-500">Can Harvest</dt>
      <dd class="mt-1">
        <% if user.can_harvest? %>
          <i class="fas fa-check text-green-500"></i>
        <% else %>
          <i class="fas fa-times text-red-500"></i>
        <% end %>
      </dd>
    </div>
  </div>
</div>
