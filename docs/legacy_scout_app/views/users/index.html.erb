<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% content_for :title, "Users" %>

  <!-- Header with responsive spacing -->
  <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-4 sm:mb-0">Users</h1>
    <%= link_to new_user_path, class: "w-full sm:w-auto text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" do %>
      <i class="fas fa-plus mr-2"></i>New User
    <% end %>
  </div>

  <!-- Responsive grid for user cards -->
  <div id="users" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @users.each do |user| %>
      <div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
        <%= render user %>
        <div class="mt-4 flex space-x-3">
          <%= link_to user, class: "flex-1 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" do %>
            View Details
          <% end %>
          <%= link_to edit_user_path(user), class: "flex-1 text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center" do %>
            Edit
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
